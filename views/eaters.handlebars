<main class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <ul class="collection with-header" id="eater-board">
                <li class="collection-header">
                    <h2 class="center">Da Top Burger Eaters</h2>
                </li>

                <li class="collection-item">
                    <strong>Eater Name</strong>

                    <span class="badge yellow lighten-2">Burgers Eaten</span>
                </li>

                {{#each eaters}}
                <li class="collection-item">
                    {{eater_name}}

                    <span class="badge yellow lighten-1">{{burgerCount}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m4 offset-m4 center">
            <div class="input-field">
                <input placeholder="Ima Burger Eater" id="eater-new" type="text" class="validate">
                <label for="eater-new">Enter a burger eater</label>
            </div>

            <button class="btn red lighten-2 waves-effect waves-red" type="submit" id="eater-admit">Submit</button>
        </div>
    </div>
</main>